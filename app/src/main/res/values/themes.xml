<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

            <item name="fontFamily">monospace</item>                                    //шрифт
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenBackground">#fff</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.WCare</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearance">@style/CutShape</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>

    <style name="Theme.WCare" parent="Base.Theme.WCare" />

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CutShape</item>
    </style>

    <style name="FillButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/CutShape</item>
    </style>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/CutShape</item>
    </style>

    <style name="CutShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="DialogCustomeTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>